<dl class="portlet portletProjectPortlet"
    i18n:domain="eXtremeManagement">
  <dt class="portletHeader">
    <span class="portletTopLeft"></span>
    <span class="management_portletHeader"
          i18n:translate="project_links">Project links</span>
    <span class="portletTopRight"></span>
  </dt>

  <tal:block tal:condition="view/links|nothing"
             tal:repeat="link view/links">
  <dd class="portletItem even">
    <a tal:attributes="href link/url"
       tal:content="link/title">Title</a>
  </dd>
  </tal:block>

  <dd tal:condition="not: view/links" class="portletItem Odd">
    <span tal:omit-tag=""
          i18n:translate="not_in_project_or_no_links">
      Currently no links are available or no project is selected.
    </span>
  </dd>

  <dd class="portletFooter">
    <span class="myProject"><tal:single condition="view/has_single_project">
      <a href=""
         tal:define="project python:view.my_projects()[0]"
         tal:attributes="href project/url;
                         title project/description"
         i18n:domain="xm.theme"
         i18n:translate="label_my_project">
        My Project
      </a>
    </tal:single>
    <tal:multiple condition="view/has_projects">
      <dl id="my-projects-menu" class="actionMenu deactivated">
        <dt class="actionMenuHeader label-my-projects">
          <a id="" href="#">
            <span i18n:domain="xm.theme"
                  i18n:translate="label_my_projects">My Projects</span>
            <span class="arrowDownAlternative">&#9660;</span>
          </a>
        </dt>
        <dd class="actionMenuContent project-submenu">
          <ul>
            <tal:actions repeat="project view/my_projects">
              <li>
                <a href=""
                   tal:attributes="href project/url;
                                   title project/description"
                   tal:content="project/title">
                </a>
              </li>
            </tal:actions>
          </ul>
        </dd>
      </dl>
    </tal:multiple></span>
    <span class="portletBottomLeft"></span>
    <span class="portletBottomRight"></span>
  </dd>
</dl>
