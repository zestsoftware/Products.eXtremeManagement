/* gantt chart look and feel */

.gantt-chart .bar,
.gantt-chart .space {
    height: 20px;
    color: #fff;
    overflow: hidden;
}

.gantt-chart .time-row th {
    border-bottom: 1px solid black;
}

.gantt-chart td.left-col {
    border-right: 1px solid black;
    padding: 0.2em;
}

.gantt-chart td {
    border-bottom: 1px solid #ccc;
}

.gantt-chart .bar {
    background-color: #ccc;
    color: white;
    text-align: center;
    font-size: 0.8em;
    border-right: 1px #999 dotted;
    border-left: 1px #999 dotted;
    overflow: hidden;
}

.gantt-chart .bar.new,
.gantt-chart .bar.start {
    background-color: #cff;
}

.gantt-chart .bar.in-progress {
    background-color: #cfc;
}

.gantt-chart .bar.invalid-date {
    background-color: #ffcc66;
}

.gantt-chart .last td {
    border-bottom: 1px black solid;
}

.gantt-chart th .timeline div.week {
    font-size: 0.8em;
    font-weight: normal;
    text-align: left;
    background-color: #eee;
    border-left: 1px dashed black;
    padding-left: 4px;
}


/* story drag/drop start */

/*
    TODO Do we want a min-height (which is ignored by IE) or a default value like
    'no stories' (which explains the gap in the interface) ?
*/
.kss-dragdrop-dragging {
    list-style: none;
    margin: 0;
    padding: 0 0.3em 0 0.3em;
    background-color: #fff;
}

.kss-dragdrop-dragging {
    border: 1px dashed #ccc;
}

tbody.droppable tr.story-draggable {
    cursor: pointer;
}

.kss-dragdrop-ghost {
    /* The original location of the currently-dragged item. */
    color: #ccc;
}

.kss-dragdrop-clone {
    /* The dragged item shown where it will turn up. */
	background: #EFEFEC !important;
	border: 1px dashed #ccc  /* a little dirty fix - to overrule the table.listing tr background image */
}

.kss-dragdrop-clone td {
	visibility: hidden; /* this hides the text inside the dragdrop-clone */
}

/* story drag/drop end*/

